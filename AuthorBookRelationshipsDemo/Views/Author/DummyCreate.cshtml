@model AuthorBookRelationshipsDemo.Models.Author

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <!-- Adding Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="mb-4 text-center">Create New User</h2>

                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="card p-4 shadow-sm">
                <h4 class="card-title">User Information</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })


                <!-- User Name Field -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter user name" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
             

                <!-- Address Field -->
                <div class="form-group mb-3">
                    @Html.EditorFor(model => model.AuthorDetails, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter address details" } })
                    @Html.ValidationMessageFor(model => model.AuthorDetails, "", new { @class = "text-danger" })
                </div>

                <!-- Submit Button -->
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary w-100">Create User</button>
                </div>
            </div>
                }

                <!-- Back to List Link -->
                <div class="mt-4 text-center">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>

    <!-- Adding Bootstrap JS (optional, for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
