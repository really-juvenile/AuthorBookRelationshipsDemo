@model IEnumerable<AuthorBookRelationshipsDemo.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.AuthorDetails.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorDetails.City)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorDetails.Country)

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
       
        <td>
            @item.AuthorDetails.Street

        </td>
        <td>
            @item.AuthorDetails.City

        </td>
        <td>
            @item.AuthorDetails.Country
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("BookDetails", "BookDetails", "Book", new { authid = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
